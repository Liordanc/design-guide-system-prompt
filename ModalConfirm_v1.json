      "background_overlay_color_token": "--background",
      "overlay_opacity": 0.6,
      "content": {
        "background_color_token": "--card",
        "text_color_token": "--card-foreground",
        "border_color_token": "--border",
        "border_radius_token": "--radius-lg",
        "shadow_token": "--shadow-lg",
        "padding_all_px": 24,
        "max_width_px": 480
      },
      "structure": {
        "title": {
          "text_role": "DIALOG_TITLE",
