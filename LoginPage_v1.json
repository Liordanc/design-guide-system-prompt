{
  "pattern_id": "LoginPage_v1",
  "type": "auth_page",
  "spec": {
    "page": {
      "background_color_token": "--background",
      "text_color_token": "--foreground",
      "padding_horizontal_px": 24,
      "padding_vertical_px": 24,
      "max_width_px": 420,
      "layout": "centered_card"
    },
    "sections": [
      {
        "section_id": "login_shell",
        "type": "single_card",
        "card": {
          "background_color_token": "--card",
          "text_color_token": "--card-foreground",
          "border_color_token": "--border",
          "border_radius_token": "--radius-lg",
          "shadow_token": "--shadow-sm",
          "padding_all_px": 24
        },
        "content": {
          "header": {
            "title": {
              "text_role": "LOGIN_TITLE",
              "font_size_px": 22,
              "font_weight": 600,
              "color_token": "--foreground",
              "margin_bottom_px": 8
            },
            "subtitle": {
              "text_role": "LOGIN_SUBTITLE",
              "font_size_px": 14,
              "font_weight": 400,
              "color_token": "--muted-foreground",
              "margin_bottom_px": 16
            }
          },
          "fields": {
            "vertical_gap_between_fields_px": 16,
            "items": [
              {
                "field_id": "email",
                "field_type": "text",
                "label": {
                  "text_role": "LABEL",
                  "font_size_px": 14,
                  "font_weight": 500,
                  "color_token": "--foreground",
                  "margin_bottom_px": 4
                },
                "input": {
                  "height_px": 40,
                  "background_color_token": "--card",
                  "border_color_token": "--input",
                  "text_color_token": "--foreground",
                  "border_radius_token": "--radius-md",
                  "padding_horizontal_px": 12,
                  "padding_vertical_px": 8
                }
              },
              {
                "field_id": "password",
                "field_type": "password",
                "same_structure_as": "email"
              }
            ]
          },
          "footer": {
            "actions": {
              "layout": {
                "display": "flex",
                "justify_content": "space-between",
                "align_items": "center",
                "margin_top_px": 16
              },
              "primary_button": {
                "button_id": "login_submit",
                "variant": "primary",
                "size": "medium",
                "background_color_token": "--primary",
                "text_color_token": "--primary-foreground",
                "border_radius_token": "--radius-md",
                "padding_horizontal_px": 16,
                "padding_vertical_px": 8
              },
              "secondary_action": {
                "text_role": "FORGOT_PASSWORD_LINK",
                "font_size_px": 12,
                "font_weight": 400,
                "color_token": "--accent-foreground"
              }
            }
          }
        }
      }
    ]
  }
}
